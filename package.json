{
  "name": "starry",
  "version": "0.0.1",
  "description": "manage your node applications",
  "scripts": {
    "dev": "cross-env ets && cross-env NODE_ENV=local midway-bin dev --ts",
    "build": "tsup-node src/**/* -d build/dist/ --minify --minify-whitespace --minify-identifiers --minify-syntax --target=esnext --clean",
    "postbuild": "tsup-node index.ts -d build/ --minify --minify-whitespace --minify-identifiers --minify-syntax --target=esnext && cp package.json build/",
    "release": "node scripts/release.mjs",
    "lint": "mwts lint",
    "check": "luckyeye",
    "fix": "mwts fix",
    "test": "midway-bin test --ts --cov",
    "postinstall": "husky install && husky set .husky/pre-commit 'npm test'",
    "pretest": "npm run fix"
  },
  "jest": {
    "testTimeout": 250000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sovlookup/node-manager.git"
  },
  "keywords": [
    "nodejs",
    "pm2"
  ],
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ],
  "midway-luckyeye": {
    "packages": [
      "midway_v2"
    ]
  },
  "author": "sovlookup",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sovlookup/node-manager/issues"
  },
  "homepage": "https://github.com/sovlookup/node-manager#readme",
  "devDependencies": {
    "@midwayjs/cli": "^1.2.72",
    "@midwayjs/egg-ts-helper": "^1.2.0",
    "@midwayjs/luckyeye": "^1.0.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "caxa": "^2.0.0",
    "cross-env": "^7.0.3",
    "dependencies-resolver": "^0.3.5",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "mwts": "^1.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "tsup": "^4.11.2",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@midwayjs/bootstrap": "^2.11.1",
    "@midwayjs/core": "^2.11.1",
    "@midwayjs/decorator": "^2.11.1",
    "@midwayjs/mock": "^2.11.1",
    "@midwayjs/web": "^2.11.1",
    "egg": "^2.29.4"
  }
}
